@using CakeShop.ViewModels
@model List<CakeViewModel>
       

<br />
<div class="form-search">
       <form asp-action="Search" asp-controller="Cake">
            <div class="form-group search-option">
                <input type="text" name="id" class="form-control w-100" placeholder="Search"/>
                <button type="submit" value="Search" class="btn btn-dark btn-search" >Search</button>
            </div>
       </form>
   </div>
<div class="index-page">
    <br/>
 <div class="cards">
      
 @foreach(CakeViewModel cake in Model)
 {
      <partial name="PartialViewCakeDetails" model="@cake"></partial>
 }
 </div>
 </div>
 <br/>

  <div class="buttons">
  <a asp-action="AddOrEditCakeMenu" asp-controller="Cake" class="btn btn-sm btn-success">
                                                  <i class="fa-solid fa-plus"></i> Add New Cake</a>
 </div>

