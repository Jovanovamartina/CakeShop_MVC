@using CakeShop.ViewModels
@using System.Globalization
@model CakeViewModel

  
<div class="card" style="width: 20rem;">
       <div class="card-body shadow-lg bg-white rounded">
           <img class="card-img-top" src="@Model.Image">
           <h1 class="card-title">@Model.Name</h1>
           <h6 class="card-text">Price: @Model.Price.ToString("C", CultureInfo.CreateSpecificCulture("mk-MK"))</h6>
               <div  class="buttons">
                     <form asp-action="DeleteCake" asp-controller="Cake"  asp-route-id="@Model.Id">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="AddOrEditCakeMenu" asp-controller="Cake" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            
                                <a asp-action="Details" asp-controller="Cake" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure? ,you want to delete the selected record')">
                                    <i class="far fa-trash-alt"> </i>
                                </button>
                            </div>
                        </form>
               </div>
       </div>
</div>