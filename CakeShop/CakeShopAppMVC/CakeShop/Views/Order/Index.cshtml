@using CakeShop.ViewModels
@model List<OrderViewModel>

@foreach (var order in Model)
{
    <input type="hidden" asp-for="@order.CartId"/>
}

<table class="table table-hover">
       <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Full Name</th>
      <th scope="col">Address</th>
      <th scope="col">Order Details</th>
      <th scope="col">Delete Order</th>
    </tr>
  </thead>
@foreach (var item in Model)
{
  <tbody>
    <tr>
      <td>@item.Id</td>
      <td>@item.Name @item.LastName</td>
      <td>@item.Address</td>
      <td><a asp-action="Details" asp-controller="Order" asp-route-id="@item.Id" class="btn btn-success">Order Details</a></td>
               
             
    
       <td><a asp-action="DeleteOrder" asp-controller="Order" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td> 
    </tr>
  </tbody>
}
</table>
