@using CakeShop.ViewModels
@model LocationViewModel
<div class="add-new-cake-form">
<form asp-action="EditOrAddLocation" asp-controller="Location" method="post">
    <h1 class="display-6 mb-5">Add New Location</h1>
     <input type="hidden" asp-for="Id" />
     <div class="form-group">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name">Name is required</span>
    </div>
    <div class="form-group">
    <label asp-for="Address" class="form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span class="text-danger" asp-validation-for="Address">Address is required</span>
    </div>
     <div class="time-inputs">
      <p>Opens At:</p>
   <input class="form-control" type="time" asp-for="OpenAt"/>
     <p class="mt-3">Closes At:</p>
   <input class="form-control" type="time" asp-for="CloseAt"/>
   </div>
    <br />
    <button type="submit" class="btn btn-secondary float-end">Save</button>
</form>
</div>
